---
interface Props {
  title: string;
  uri: string;
  excerpt: string;
  image: {
    sourceUrl: string;
    srcSet: string;
    mediaDetails: {
      height: number;
      width: number;
    };
    altText: string;
  };
}

const { title, uri, excerpt, image } = Astro.props;
---

<article class='max-w-lg mx-auto'>
  <div
    class='bg-white shadow-md border border-gray-200 rounded-lg max-w-sm mb-5'
  >
    <a href={`/blog${uri}`}>
      <img
        class='rounded-t-lg object-cover'
        src={image.sourceUrl}
        srcset={image.srcSet}
        height={image.mediaDetails.height}
        width={image.mediaDetails.width}
        alt={image.altText}
        transition:name=`img-${uri}`
      />
    </a>
    <div class='p-5'>
      <a href={`/blog${uri}`}>
        <h5 class='text-gray-900 font-bold text-2xl tracking-tight mb-2'>
          {title}
        </h5>
      </a>
      <div class='text-gray-600 text-sm mb-2'>
        <Fragment set:html={excerpt} />
      </div>
      <a
        class='text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-3 py-2 text-center inline-flex items-center'
        href={`/blog${uri}`}
      >
        Read more
      </a>
    </div>
  </div>
</article>
