---
import { ViewTransitions } from "astro:transitions";
import Header from "@components/Header.astro";
import SEO from "@components/SEO.astro";
interface Props {
  title: string;
  description: string;
  canonical: string;
  image?: object | string;
  robots?: string;
  schema: string;
}

const { title, description, canonical, image, robots, schema } = Astro.props;
---

<!doctype html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='description' content='Astro description' />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <meta name='generator' content={Astro.generator} />
    <SEO {title} {description} schema={schema} {canonical} {image} />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <Header />
  <body class='bg-gradient-to-b from-slate-100 via-slate-200 to-slate-300'>
    <main class='max-w-5xl px-4 m-auto'>
      <slot />
    </main>
    <style is:global>
      img {
        width: 100%;
      }
    </style>
  </body>
</html>
